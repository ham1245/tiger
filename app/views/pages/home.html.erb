<div class="row">
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
       <div class="panel-image hide-panel-body">
         <%if current_user.banner_url == nil%>
             <%= image_tag "/banner.png", class:"panel-image-preview"%>
         <%else%>
             <%= image_tag current_user.banner_url, class:"panel-image-preview"%>
         <%end%>
       </div>
        <div class="panel-footer text-center">
          <div class="row">
            <div class="col-sm-2">
              <%if current_user.avatar_url == nil%>
                  <%= image_tag "/avatar.png", height:"70px", width:"70px", class:"rounded-img profile-photo"%>
              <%else%>
                  <%= image_tag current_user.avatar_url, height:"70px", width:"70px", class:"rounded-img profile-photo"%>
              <%end%>
            </div>
            <div class="col-sm-10"><h4 style="text-align: center;"><%= current_user.username %></h4></div>
            <div class="col-sm-12" style="margin-top: 10px;">
              <div class="col-sm-3" style="font-size: 75%; opacity: 0.7;">POSTS<br>
                <h6 ><a href="/user/<%= current_user.username %>", style= "color:#0084B4;font-size: 200%;"><%= current_user.posts.count%></a></h6>
              </div>
              <div class="col-sm-5" style="font-size: 75%; opacity: 0.7;">FOLLOWING<br>
                <h6 ><a href="/following/<%= current_user.username %>", style= "color:#0084B4;font-size: 200%;"><%= current_user.following.count%></a></h6>
              </div>
              <div class="col-sm-2" style="font-size: 75%; opacity: 0.7;">FOLLOWERS<br>
                <h6 ><a href="/followers/<%= current_user.username %>", style= "color:#0084B4;font-size: 200%;"><%= current_user.followers.count%></a></h6>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

