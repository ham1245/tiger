<div class="panel panel-default">
  <div class="panel-body">
 		<p><h3>Send a message to <a style="font-weight: bold;opacity: 0.85;" href="/user/<%= @user.username %>"><%= @user.username %></a></h3></p>
      <p><%= form_tag({controller: "messages", action: "create"}, method: :post) do %></p>
      <%= label_tag :subject %>
      <p><%= text_field_tag :subject %></p>
      <%= label :body, "Message text" %>
      <p><%= text_area_tag :body %></p>
       <%= hidden_field_tag(:user, "#{@user.id}") %>
      <%= submit_tag 'Send message', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

